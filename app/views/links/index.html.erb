<h2>My Wall</h2>

<h3>My Links</h3>

<table id="links">
  <% @links.each do |link| %>
    <tr>
      <td><%= link_to link.url, link %></td>
      <td><%= link_to 'Delete', link, :method => :delete, :confirm => 'Delete this link?' %></td>
    </tr>
  <% end %>
</table>

<h3>My Comments</h3>
<ol id="comments">
  <% @comments.each do |comment| %>
    <%= render 'comments/comment', :comment => comment %>
  <% end %>
</ol>
