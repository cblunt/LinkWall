<!DOCTYPE html>
<html>
  <head>
    <title>LinkWall</title>
    <%= stylesheet_link_tag :all %>
    <%= csrf_meta_tag %>
  </head>

  <body>
    <header>
      <h1>LinkWall</h1> 

      <div id="auth">
        <% if current_user %>
          Hi <%= current_user.name %>.
          <%= link_to 'Sign out', signout_path %>
        <% end %>
      </div>
    </header>

    <nav>
      <ol>
        <li><%= link_to 'Wall', root_path %></li>
        <% if current_user %>
          <li><%= link_to 'My Wall', links_path %></li>
          <li><%= link_to 'Add a link', new_link_path %></li>
        <% else %>
          <li>Sign in with <%= link_to 'Twitter', '/auth/twitter' %></li>
        <% end %>
      </ol>
    </nav>

    <div id="page">
      <%= alert %>
      <%= notice %>

      <%= yield %>
    </div>
  </body>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.4.4/jquery.min.js" type="text/javascript"></script>
  <%= javascript_include_tag :defaults %>
</html>
